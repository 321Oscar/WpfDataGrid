<Window
    x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:WpfApp1.ViewModels"
    xmlns:views="clr-namespace:WpfApp1.Views" xmlns:components="clr-namespace:WpfApp1.Components"
    Title="MainWindow"
    Width="1000"
    Height="800"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <components:Modal IsOpen="{Binding IsOpen}" Panel.ZIndex="100">
            <ContentControl Content="{Binding CurrentModalViewModel}"/>
        </components:Modal>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <WrapPanel Grid.Row="0" Margin="0,5,0,10">
                <!--  Device  -->
                <GroupBox Header="CanDevice">
                    <Grid Margin="0" Width="500">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <!--<Button Content="Connect" Style="{StaticResource NormalButton}" Command="{Binding OpenCommand}"/>
                        <Button Content="Close" Style="{StaticResource NormalButton}" Command="{Binding CloseCommand}"/>-->
                        <Button 
                            Grid.Column="0"
                            Grid.Row="0"
                            Content="Config"
                            Command="{Binding DeivceConfigCommand}"
                            Style="{StaticResource NormalButton}" />
                        <!--<Button Content=" Send" Style="{StaticResource NormalButton}" />-->
                        <!--<Button
                            Command="{Binding StartCommand}"
                            Content="Start"
                            Style="{StaticResource NormalButton}" />-->
                        <Button
                            Grid.Row="1"
                            Command="{Binding StopCommand}"
                            Content="Stop"
                            Style="{StaticResource NormalButton}" />
                        
                        <TextBlock 
                            Grid.Column="0"
                            Grid.Row="2"
                            Style="{StaticResource labelText}">Comms Counter:</TextBlock>

                        <TextBlock 
                            Grid.Row="2" 
                            Grid.Column="1"
                            d:Text="100" 
                            Text="{Binding FramesCount}"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Version">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="EM SW Version:" />
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="PC SW Version:" />
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Hardware ID:"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="1.0.0.0" />
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="1.0.0.0" />
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="1.0.0.0" />
                    </Grid>
                </GroupBox>
                <GroupBox Header="CAN INH State">
                    <StackPanel>
                        <CheckBox Style="{StaticResource NormalCheckBox}" HorizontalAlignment="Left" Content="TCAN_1145_DevCAN" IsEnabled="False"/>
                        <CheckBox Style="{StaticResource NormalCheckBox}" HorizontalAlignment="Left" Content="TCAN_1145_CANFD_5" IsEnabled="False"/>
                        <CheckBox Style="{StaticResource NormalCheckBox}" HorizontalAlignment="Left" Content="TCAN_1145_CANFD_11" IsEnabled="False"/>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Controls">
                    <GroupBox.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource NormalButton}"/>
                    </GroupBox.Resources>
                    <WrapPanel MaxWidth="500">
                        <Button Content="Disable TLF Reset"/>
                        <Button Content="Can Trcv Normal Mode"/>
                        <Button Content="Disable CAN INH"/>
                        <Button Content="Send Can Wake Up"/>
                        <Button Content="Reset Min/Max"/>
                        <Button Content="Sleep TLF"/>
                    </WrapPanel>
                </GroupBox>
            </WrapPanel>
            <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" />
            <StatusBar Grid.Row="2">
                <StatusBarItem>
                    <TextBlock Text="{Binding Log}" />
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</Window>
