<UserControl x:Class="ERad5TestGUI.Components.LabelWithContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ERad5TestGUI.Components"
             mc:Ignorable="d" 
             x:Name="labelControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="{Binding Orientation, ElementName=labelControl}">
        <TextBlock Text="{Binding Title, ElementName=labelControl}" 
                   FontWeight="Bold" 
                   VerticalAlignment="Center" 
                   Margin="0,0,10,0"/>

        <TextBlock Text="{Binding Content, ElementName=labelControl}" 
                   VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
