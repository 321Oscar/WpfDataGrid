<UserControl
    x:Class="ERad5TestGUI.Components.LabelWithContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ERad5TestGUI.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="labelControl"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Orientation="{Binding Orientation, ElementName=labelControl}">
        <TextBlock
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Text="{Binding Title, ElementName=labelControl}" />

        <TextBlock VerticalAlignment="Center" Text="{Binding Content, ElementName=labelControl}" />
    </StackPanel>
</UserControl>
