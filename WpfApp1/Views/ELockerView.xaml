<UserControl
    x:Class="ERad5TestGUI.Views.ELockerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:ctrls="clr-namespace:ERad5TestGUI.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ERad5TestGUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock
                d:Text="E-Locker"
                Style="{StaticResource TitleLabel}"
                Text="{Binding ViewName}" />
            <Button
                Height="25"
                Margin="10,0,0,0"
                Command="{StaticResource ClearSignalDataCommand}"
                CommandParameter="{Binding}"
                Content="Clear" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <GroupBox Header="Setting">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <ScrollViewer Margin="-8">
                        <ItemsControl ItemsSource="{Binding SettingGroups}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Grid.IsSharedSizeScope="True" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock>TLF35584</TextBlock>
                            <TextBlock FontWeight="Bold">SS1 and SS2 Sate:</TextBlock>
                            <TextBlock FontWeight="Bold">Normal mode - High</TextBlock>
                            <TextBlock FontWeight="Bold">Other Modes - Low</TextBlock>
                        </StackPanel>
                        <ctrls:ControlWithTitle
                            Title="Current Mode"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Orientation="Vertical">
                            <ctrls:ControlWithTitle.Content>
                                <TextBox
                                    Width="80"
                                    IsReadOnly="True"
                                    Text="{Binding TLF35584_Current_State.Value1}" />
                            </ctrls:ControlWithTitle.Content>
                        </ctrls:ControlWithTitle>
                    </Grid>
                </Grid>
            </GroupBox>
            <ScrollViewer Grid.Row="0" Grid.Column="1">
                <ItemsControl ItemsSource="{Binding Groups}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Grid.IsSharedSizeScope="True" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
