<UserControl x:Class="ERad5TestGUI.Views.DevicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ERad5TestGUI.Views" 
             xmlns:converters="clr-namespace:ERad5TestGUI.Converters"
             xmlns:zlgapi="clr-namespace:ERad5TestGUI.Devices.ZlgAPI"
             xmlns:dev="clr-namespace:ERad5TestGUI.Devices" xmlns:components="clr-namespace:ERad5TestGUI.Components"
             Background="White"
             mc:Ignorable="d" 
             d:DesignHeight="300" 
             d:DesignWidth="300">
    <UserControl.Resources>
        <converters:DeviceHardwareTypeIsCheckedConverter x:Key="DeviceHardwareTypeIsCheckedConverter"/>
    </UserControl.Resources>
    <Grid Margin="10,5" MinWidth="200">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock 
            Text="Device Config" 
            Style="{StaticResource TitleLabel}" 
            Grid.Row="0"/>

        <Grid 
            Grid.Row="1" 
            MinHeight="100" 
            Margin="0,10,0,0">
            <Grid.RowDefinitions >
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition />
                <!--<RowDefinition />-->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <RadioButton  
                Grid.Row="0" 
                Margin="0,2,2,0"
                Grid.Column="0" 
                Name="vectorCheck"
                GroupName="Type"
                IsChecked="{Binding HardWareType,
                                    Mode=TwoWay,
                                    Converter={StaticResource DeviceHardwareTypeIsCheckedConverter},
                                    ConverterParameter={x:Static dev:DeviceHardWareType.Vector}}" />
            <RadioButton 
                Grid.Row="1" 
                Grid.Column="0" 
                GroupName="Type"
                Name="virtualCheck"
                IsChecked="{Binding HardWareType,
                                    Mode=TwoWay,
                                    Converter={StaticResource DeviceHardwareTypeIsCheckedConverter},
                                    ConverterParameter={x:Static dev:DeviceHardWareType.Virtual}}"/>
            <components:ControlWithTitle 
                Title="Vector Channels:" 
                Orientation="Vertical" 
                Grid.Row="0" Grid.Column="1"
                IsEnabled="{Binding ElementName=vectorCheck,Path=IsChecked}">
                <components:ControlWithTitle.Content>
                    <ComboBox 
                        ItemsSource="{Binding VectorDevices}" 
                        DisplayMemberPath="Name" 
                        SelectedValue="{Binding CurrentDevice}"></ComboBox>
                </components:ControlWithTitle.Content>
            </components:ControlWithTitle>
            <components:ControlWithTitle 
                Title="Virtual Channels:" 
                Orientation="Vertical" 
                Grid.Row="1" Grid.Column="1"
                IsEnabled="{Binding ElementName=virtualCheck,Path=IsChecked}">
                <components:ControlWithTitle.Content>
                    <ComboBox 
                        ItemsSource="{Binding VirtualDevices}" 
                        DisplayMemberPath="Name" 
                        SelectedValue="{Binding CurrentDevice}"/>
                </components:ControlWithTitle.Content>
            </components:ControlWithTitle>
            <RadioButton 
                Grid.Row="2" 
                x:Name="zlgCheck"
                GroupName="Type"
                IsChecked="{Binding HardWareType,
                                    Mode=TwoWay,
                                    Converter={StaticResource DeviceHardwareTypeIsCheckedConverter},
                                    ConverterParameter={x:Static dev:DeviceHardWareType.Zlg}}"/>
            <GroupBox 
                Margin="0,2,0,0"
                Header="Zlg Device" 
                Grid.Row="2" Grid.Column="1"
                IsEnabled="{Binding ElementName=zlgCheck,Path=IsChecked}">
                <Grid Margin="-7">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.Resources>
                        <Style TargetType="ListBox" BasedOn="{StaticResource {x:Type ListBox}}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=Items.Count}" Value="0">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <!--<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Add Zlg Channel First</TextBlock>-->
                                                <ListBoxItem Content="Add Zlg Channel First"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Resources>
                    <WrapPanel 
                        Grid.Row="0" 
                        Grid.IsSharedSizeScope="True">
                        <!--Margin="70,-28,0,0"-->
                        <components:ControlWithTitle Title="Device Type:" Style="{StaticResource ControlWithTitleGridStyle}">
                            <components:ControlWithTitle.Content>
                                <ComboBox 
                                    SelectedItem="{Binding ZlgDeviceType}"
                                    ItemsSource="{Binding Source={components:EnumBindingSource {x:Type zlgapi:ZlgDeviceType}}}"/>
                                <!--<ComboBox 
                                    Width="112.5"
                                    ItemsSource="{Binding ZLGDeviceTypes}" 
                                    DisplayMemberPath="Value" 
                                    SelectedValuePath="Key"
                                    SelectedValue="{Binding ZlgDeviceTypeIndex}"/>-->
                            </components:ControlWithTitle.Content>
                        </components:ControlWithTitle>
                        <components:ControlWithTitle 
                                Title="Device Index:" 
                                Style="{StaticResource ControlWithTitleGridStyle}"
                                Margin="0,2">
                            <components:ControlWithTitle.Content>
                                <ComboBox SelectedIndex="{Binding ZlgDeviceIndex, Mode=TwoWay}">
                                    <ComboBoxItem Content="0" />
                                    <ComboBoxItem Content="1" />
                                    <ComboBoxItem Content="2" />
                                    <ComboBoxItem Content="3" />
                                    <ComboBoxItem Content="4" />
                                    <ComboBoxItem Content="5" />
                                </ComboBox>
                            </components:ControlWithTitle.Content>
                        </components:ControlWithTitle>
                        <components:ControlWithTitle Title="Channel Index:" Style="{StaticResource ControlWithTitleGridStyle}">
                            <components:ControlWithTitle.Content>
                                <ComboBox 
                                    ItemsSource="{Binding CanChannelSource}" 
                                    SelectedIndex="{Binding ZlgCanChannel,Mode=TwoWay}" />
                            </components:ControlWithTitle.Content>
                        </components:ControlWithTitle>
                        <Button 
                            Content="Add Zlg Channel" 
                            Width="40"
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top"
                            Command="{Binding AddZlgChannelCommand}"/>
                        <Button 
                            Content="Del"
                            Width="40" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top" 
                            Command="{Binding DelZlgChannelCommand}"/>
                      
                    </WrapPanel>
                    <ListBox 
                        Grid.Row="1"
                        ItemsSource="{Binding ZlgDevices}" 
                        SelectedItem="{Binding CurrentDevice}"
                        Margin="0,5,0,0"/>
                </Grid>
                
            </GroupBox>

            <!--<GroupBox Header="Zlg Devices" Grid.Row="2" Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource labelText}">Device:</TextBlock>
                    <ComboBox Style="{StaticResource NormalCombox}"></ComboBox>
                </StackPanel>
            </GroupBox>-->
        </Grid>
        <StackPanel 
            Grid.Row="2" 
            Orientation="Horizontal" 
            HorizontalAlignment="Right" 
            Margin="0,10,0,0">
            <Button 
                Content="Cancel" 
                Command="{Binding CancelCommand}" 
                Margin="2" /> 
            <Button 
                Content="Ok" 
                Command="{Binding SaveConfigCommand}" 
                Margin="2" />
        </StackPanel>
    </Grid>
</UserControl>
