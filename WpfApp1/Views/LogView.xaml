<UserControl
    x:Class="ERad5TestGUI.Views.LogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ERad5TestGUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel>
            <CheckBox Content="Log A I/O" />
            <CheckBox Content="Log DI" />
            <CheckBox Content="Log DO" />
            <CheckBox Content="Log PWM IN and TEMP" />
            <Button Content="Start" />
            <Button Content="Stop" />
            <Button Content="Clear" />
        </StackPanel>
        <RichTextBox Grid.Column="1" />
    </Grid>
</UserControl>
