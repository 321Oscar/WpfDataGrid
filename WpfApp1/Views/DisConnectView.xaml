<UserControl
    x:Class="ERad5TestGUI.Views.DisConnectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ERad5TestGUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Margin="-8"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock
                d:Text="DisConnect"
                Style="{StaticResource TitleLabel}"
                Text="{Binding ViewName}" />

            <Button
                Height="25"
                Margin="5,0"
                Command="{Binding WakeUpCommand}">
                <Button.Style>
                    <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                        <Setter Property="Content" Value="Wake Up" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Sending}" Value="True">
                                <Setter Property="Content" Value="Cancel" />
                                <Setter Property="ToolTip">
                                    <Setter.Value>
                                        <TextBlock Text="Stop Send 0x500 Can2.0 msg" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Sending}" Value="False">
                                <Setter Property="Content" Value="Wake Up" />
                                <Setter Property="ToolTip">
                                    <Setter.Value>
                                        <TextBlock Text="Start Send 0x15,0x16 Can2.0 msg" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button
                Height="25"
                Command="{StaticResource ClearSignalDataCommand}"
                CommandParameter="{Binding InputSignals}"
                Content="Clear Data" />

        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <GroupBox Header="Inputs">
                <!--<ScrollViewer >
                    <ItemsControl ItemsSource="{Binding InputSignals}" />
                </ScrollViewer>-->
                <DataGrid
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding InputSignals}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
                        <DataGridTextColumn Binding="{Binding OriginValue}" Header="Value" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            <GroupBox Grid.Row="1" Header="Outputs">
                <Grid>
                    <Button
                        Width="80"
                        Height="25"
                        Margin="60,-36,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Command="{Binding UpdateCommand}"
                        Content="Update" />
                    <!--<ScrollViewer >
                        <ItemsControl ItemsSource="{Binding OutputSignals}" />
                    </ScrollViewer>-->
                    <DataGrid
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        ItemsSource="{Binding OutputSignals}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Binding="{Binding Name}"
                                Header="Name"
                                IsReadOnly="True" />
                            <DataGridTextColumn Binding="{Binding OriginValue}" Header="Value" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
