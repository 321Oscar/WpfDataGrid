<UserControl
    x:Class="ERad5TestGUI.Views.GDIC3160View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:ctrls="clr-namespace:ERad5TestGUI.Components"
    xmlns:cvts="clr-namespace:ERad5TestGUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ERad5TestGUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:ERad5TestGUI.Models"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="CustomCheckBoxStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <StackPanel>
                            <Grid>
                                <CheckBox
                                    x:Name="ToggleButton"
                                    Content="{TemplateBinding Content}"
                                    IsChecked="{Binding RelativeSource={RelativeSource AncestorType=CheckBox}, Path=IsChecked}" />
                            </Grid>
                            <TextBlock
                                x:Name="StatusTextBlock"
                                Margin="18,0,0,0"
                                FontSize="{TemplateBinding FontSize}"
                                Foreground="{Binding ElementName=ToggleButton, Path=Foreground}"
                                Text="Unchecked" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="StatusTextBlock" Property="Text" Value="High" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="StatusTextBlock" Property="Text" Value="Low" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Style="{StaticResource TitleLabel}" Text="GDIC3162" />
            <adonisControls:SplitButton
                Height="25"
                Margin="5,0"
                VerticalAlignment="Center"
                Click="SplitButton_Click"
                Content="Clear Data">
                <adonisControls:SplitButton.SplitMenu>
                    <ContextMenu MinWidth="{Binding PlacementTarget.ActualWidth, RelativeSource={RelativeSource Self}}">
                        <MenuItem Command="{StaticResource ClearSignalDataCommand}" Header="Clear Status">
                            <MenuItem.CommandParameter>
                                <MultiBinding Converter="{StaticResource ClearCommandParamtersConvert}">
                                    <MultiBinding.Bindings>
                                        <Binding Path="SignalStore" />
                                        <Binding Path="ViewName" />
                                        <Binding Source="{x:Type models:GDICStatusDataSignal}" />
                                    </MultiBinding.Bindings>
                                </MultiBinding>
                            </MenuItem.CommandParameter>
                        </MenuItem>
                        <MenuItem Command="{StaticResource ClearSignalDataCommand}" Header="Clear Aout">
                            <MenuItem.CommandParameter>
                                <MultiBinding Converter="{StaticResource ClearCommandParamtersConvert}">
                                    <MultiBinding.Bindings>
                                        <Binding Path="SignalStore" />
                                        <Binding Path="ViewName" />
                                        <Binding Source="{x:Type models:GDICAoutSignal}" />
                                    </MultiBinding.Bindings>
                                </MultiBinding>
                            </MenuItem.CommandParameter>
                        </MenuItem>
                        <MenuItem Command="{StaticResource ClearSignalDataCommand}" Header="Clear Register &amp; ADC">
                            <MenuItem.CommandParameter>
                                <MultiBinding Converter="{StaticResource ClearCommandParamtersConvert}">
                                    <MultiBinding.Bindings>
                                        <Binding Path="SignalStore" />
                                        <Binding Path="ViewName" />
                                        <Binding Source="{x:Type models:GDICRegisterSignal}" />
                                    </MultiBinding.Bindings>
                                </MultiBinding>
                            </MenuItem.CommandParameter>
                        </MenuItem>
                    </ContextMenu>
                </adonisControls:SplitButton.SplitMenu>
            </adonisControls:SplitButton>
        </StackPanel>


        <!--<Grid Grid.Row="1" Panel.ZIndex="99">
            <Grid.Style>
                <Style TargetType="FrameworkElement">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Border Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}"
                                    Opacity="0.5"/>

            <ContentControl ContentTemplate="{DynamicResource {x:Static adonisUi:Templates.LoadingCircle}}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Width="{adonisUi:Space 5}"
                                            Height="{adonisUi:Space 5}"
                                            Focusable="False"/>
        </Grid>-->

        <Grid Grid.Row="1" Panel.ZIndex="99">
            <Grid.Style>
                <Style TargetType="FrameworkElement">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Border Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}" Opacity="0.5" />

            <ContentControl
                Width="{adonisUi:Space 5}"
                Height="{adonisUi:Space 5}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                ContentTemplate="{DynamicResource {x:Static adonisUi:Templates.LoadingCircle}}"
                Focusable="False" />
        </Grid>

        <TabControl Grid.Row="1">
            <!--    -->
            <TabItem Header="Status">
                <Grid Margin="-5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Button Command="{Binding AddStatusCommand}" Content="Init" />
                        <Button Command="{Binding ClearStatusCommand}" Content="Clear" />
                    </StackPanel>
                    <ScrollViewer
                        Grid.Row="1"
                        Grid.IsSharedSizeScope="True"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Visible">
                        <ScrollViewer.Resources>
                            <DataTemplate DataType="{x:Type models:GDICStatusDataSignal}">
                                <Border
                                    Margin="0,1"
                                    Padding="1"
                                    Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}"
                                    Style="{StaticResource CellBorder}">
                                    <StackPanel Margin="0">
                                        <Border Background="{DynamicResource {x:Static adonisUi:Brushes.Layer1BackgroundBrush}}">
                                            <TextBlock Padding="2" Text="{Binding DisplayName}" />
                                        </Border>

                                        <!--<Rectangle Height="2" Margin="0,2" Fill="#f6f6f6"/>-->
                                        <TextBlock
                                            Margin="0,2,0,0"
                                            Padding="2"
                                            Text="{Binding OriginValue}" />
                                    </StackPanel>
                                    <Border.ToolTip>
                                        <ContentControl Content="{Binding}" ContentTemplate="{StaticResource SignalToolTip}" />
                                    </Border.ToolTip>
                                </Border>
                            </DataTemplate>

                            <DataTemplate DataType="{x:Type models:GDICStatusGroup}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" SharedSizeGroup="SignalName" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Margin="0,0,5,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="{Binding DisplayName}" />

                                    <!--  Data0~Data9  -->
                                    <ItemsControl
                                        Grid.Column="1"
                                        ItemsSource="{Binding GDICStatusSignals}"
                                        VirtualizingStackPanel.IsVirtualizing="True"
                                        VirtualizingStackPanel.VirtualizationMode="Recycling">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Rows="1" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </Grid>
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type models:GDICStatusRegisterGroup}">
                                <GroupBox
                                    Width="900"
                                    Margin="2"
                                    Header="{Binding GroupName}">
                                    <Grid Margin="-5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" MaxHeight="300" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <ItemsControl Grid.Row="1" ItemsSource="{Binding GDICStatusGroups}" />

                                        <!--  Write Controls  -->
                                        <Border
                                            Grid.Row="0"
                                            CornerRadius="2"
                                            Style="{StaticResource CardBorder}">
                                            <Grid Margin="0,5,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition SharedSizeGroup="SignalName" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <ItemsControl
                                                    Grid.Column="1"
                                                    Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}"
                                                    ItemsSource="{Binding WriteStatus.GDICStatusSignals}"
                                                    VirtualizingStackPanel.IsVirtualizing="True"
                                                    VirtualizingStackPanel.VirtualizationMode="Recycling">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <UniformGrid Rows="1" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <CheckBox
                                                                Content="{Binding DisplayName}"
                                                                IsChecked="{Binding OriginValue, Converter={StaticResource DoubleBooleanConverter}}"
                                                                Style="{StaticResource CustomCheckBoxStyle}">
                                                                <CheckBox.ToolTip>
                                                                    <ContentControl Content="{Binding}" ContentTemplate="{StaticResource SignalToolTip}" />
                                                                </CheckBox.ToolTip>
                                                            </CheckBox>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <StackPanel>
                                                    <ComboBox
                                                        Width="140"
                                                        ItemsSource="{Binding GDICStatusGroups, Converter={StaticResource EnumerableNullReplaceConverter}, ConverterParameter='(Empty)'}"
                                                        SelectedIndex="{Binding WriteStatus.WriteIndex.OriginValue}">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding}" />
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>
                                                    <Button
                                                        Command="{Binding DataContext.WriteStatusCommand, RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor}}"
                                                        CommandParameter="{Binding WriteStatus}"
                                                        Content="Write">

                                                        <Button.ToolTip>
                                                            <ContentControl Content="{Binding WriteStatus.WriteFlag}" ContentTemplate="{StaticResource SignalToolTip}" />
                                                        </Button.ToolTip>

                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </GroupBox>
                            </DataTemplate>

                        </ScrollViewer.Resources>
                        <ItemsControl
                            ItemsSource="{Binding GDICStatusGroups}"
                            VirtualizingStackPanel.IsVirtualizing="True"
                            VirtualizingStackPanel.VirtualizationMode="Recycling">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <!--    -->
            <TabItem Header="AOUT">
                <Grid Margin="-5">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <!--  Signals  -->
                    <Grid Margin="-4">
                        <Grid.Resources>
                            <DataTemplate DataType="{x:Type models:GDICAoutTemperatureSignal}">
                                <GroupBox Margin="1">
                                    <GroupBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontFamily="Segoe UI" Text="{Binding GDDevice}" />
                                            <TextBlock
                                                Margin="5,0,0,0"
                                                FontFamily="Segoe UI"
                                                FontWeight="Bold"
                                                Text="{Binding Selection}" />
                                        </StackPanel>
                                    </GroupBox.Header>
                                    <Grid Margin="-8">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid
                                            Grid.Row="0"
                                            Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}"
                                            Visibility="{Binding HasTemperature, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition
                                                    Width="auto"
                                                    MinWidth="100"
                                                    SharedSizeGroup="SignalName" />
                                                <ColumnDefinition
                                                    Width="auto"
                                                    MinWidth="100"
                                                    SharedSizeGroup="value1" />
                                                <ColumnDefinition
                                                    Width="auto"
                                                    MinWidth="100"
                                                    SharedSizeGroup="valueStad" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border Style="{StaticResource CellBorder}">
                                                <Grid Grid.Column="0" ToolTip="{Binding DisplayName}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto" />
                                                        <ColumnDefinition Width="auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Style="{StaticResource SignalNameFontStyle}" Text="Voltage" />
                                                </Grid>
                                            </Border>
                                            <ContentControl
                                                Grid.Column="1"
                                                Content="{Binding}"
                                                ContentTemplate="{StaticResource CommonSignal}" />
                                            <!--  Standard  -->
                                            <TextBlock
                                                Grid.Column="2"
                                                Margin="5,0,5,0"
                                                Style="{StaticResource ValueTextBlockStyle}"
                                                Text="{Binding StandardDev, StringFormat={}{0:F2}}"
                                                ToolTip="StandardDev" />
                                        </Grid>
                                        <ContentControl Grid.Row="1" Content="{Binding Duty}" />
                                        <ContentControl Grid.Row="2" Content="{Binding Freq}" />
                                    </Grid>
                                </GroupBox>
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type models:GDICAoutSignal}">
                                <Grid
                                    Grid.Row="0"
                                    Margin="0,1"
                                    Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition
                                            Width="auto"
                                            MinWidth="100"
                                            SharedSizeGroup="SignalName" />
                                        <ColumnDefinition
                                            Width="auto"
                                            MinWidth="100"
                                            SharedSizeGroup="value1" />
                                        <ColumnDefinition
                                            Width="auto"
                                            MinWidth="100"
                                            SharedSizeGroup="valueStad" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Border Style="{StaticResource CellBorder}">
                                        <Grid Grid.Column="0" ToolTip="{Binding DisplayName}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Style="{StaticResource SignalNameFontStyle}" Text="{Binding DisplayName}" />
                                        </Grid>
                                    </Border>
                                    <ContentControl
                                        Grid.Column="1"
                                        Content="{Binding}"
                                        ContentTemplate="{StaticResource CommonSignal}" />
                                    <!--  Standard  -->
                                    <TextBlock
                                        Grid.Column="2"
                                        Margin="5,0,5,0"
                                        Style="{StaticResource ValueTextBlockStyle}"
                                        Text="{Binding StandardDev, StringFormat={}{0:F2}}"
                                        ToolTip="StandardDev" />
                                </Grid>
                            </DataTemplate>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <ScrollViewer
                            x:Name="sv1"
                            Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}"
                            Grid.IsSharedSizeScope="True"
                            ScrollChanged="s1_ScrollChanged">
                            <ItemsControl ItemsSource="{Binding TemperatueSignals}" />
                        </ScrollViewer>
                        <ScrollViewer
                            x:Name="sv2"
                            Grid.Column="1"
                            Grid.IsSharedSizeScope="True"
                            ScrollChanged="s1_ScrollChanged">
                            <ItemsControl ItemsSource="{Binding TemperatueAoutSignals}" />
                        </ScrollViewer>
                    </Grid>

                    <!--  Control  -->
                    <Border
                        Grid.Row="1"
                        BorderBrush="Gray"
                        BorderThickness="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <GroupBox
                                    Header="Control"
                                    IsEnabled="False"
                                    Visibility="Collapsed">
                                    <StackPanel>
                                        <ComboBox Width="80" />
                                        <Button Content="Start" />
                                        <Button Content="Stop" />
                                    </StackPanel>
                                </GroupBox>
                                <GroupBox Margin="1" Header="Threshold">
                                    <StackPanel Grid.IsSharedSizeScope="True">
                                        <ctrls:ControlWithTitle Title="Signal:" Style="{StaticResource ControlWithTitleGridStyle}">
                                            <ctrls:ControlWithTitle.Content>
                                                <ComboBox SelectedIndex="{Binding ThresholdType}">
                                                    <ComboBoxItem>Voltage</ComboBoxItem>
                                                    <ComboBoxItem>Duty</ComboBoxItem>
                                                    <ComboBoxItem>Freq</ComboBoxItem>
                                                </ComboBox>
                                            </ctrls:ControlWithTitle.Content>
                                        </ctrls:ControlWithTitle>
                                        <ctrls:ControlWithTitle Title="Min:" Style="{StaticResource ControlWithTitleGridStyle}">
                                            <ctrls:ControlWithTitle.Content>
                                                <Slider
                                                    Width="100"
                                                    Padding="2"
                                                    Minimum="-100000"
                                                    Style="{StaticResource NumberUpDownStyle}"
                                                    Value="{Binding MinThreshold}" />
                                            </ctrls:ControlWithTitle.Content>
                                        </ctrls:ControlWithTitle>
                                        <ctrls:ControlWithTitle
                                            Title="Max:"
                                            Margin="0,2"
                                            Style="{StaticResource ControlWithTitleGridStyle}">
                                            <ctrls:ControlWithTitle.Content>
                                                <Slider
                                                    Width="100"
                                                    Padding="2"
                                                    Maximum="99999"
                                                    Style="{StaticResource NumberUpDownStyle}"
                                                    Value="{Binding MaxThreshold}" />
                                            </ctrls:ControlWithTitle.Content>
                                        </ctrls:ControlWithTitle>
                                        <Button
                                            Margin="0,2"
                                            Command="{Binding UpdateThresholdCommand}"
                                            Content="Update" />
                                    </StackPanel>
                                </GroupBox>
                                <GroupBox Header="Stadard Dev">
                                    <StackPanel>
                                        <ctrls:ControlWithTitle
                                            Title="Enter the number of samples(Max:1000):"
                                            Width="120"
                                            Orientation="Vertical">
                                            <ctrls:ControlWithTitle.Content>
                                                <Slider
                                                    Padding="2"
                                                    Maximum="1000"
                                                    Minimum="1"
                                                    Style="{StaticResource NumberUpDownStyle}"
                                                    Value="{Binding StandardCount}" />
                                            </ctrls:ControlWithTitle.Content>
                                        </ctrls:ControlWithTitle>
                                        <Button
                                            Margin="0,4"
                                            Command="{Binding CalculateSTDCommand}"
                                            Content="Calculate" />
                                    </StackPanel>
                                </GroupBox>

                            </StackPanel>
                            <GroupBox Grid.Column="1" Header="AMUX">
                                <StackPanel Grid.IsSharedSizeScope="True">
                                    <ctrls:ControlWithTitle Title="Device Selection" Style="{StaticResource ControlWithTitleGridStyle}">
                                        <ctrls:ControlWithTitle.Content>
                                            <ComboBox
                                                Width="80"
                                                ItemsSource="{Binding TemperatueAoutSignals}"
                                                SelectedValue="{Binding CurrentDevice}" />
                                        </ctrls:ControlWithTitle.Content>
                                    </ctrls:ControlWithTitle>
                                    <ctrls:ControlWithTitle Title="AMUX Selection" Style="{StaticResource ControlWithTitleGridStyle}">
                                        <ctrls:ControlWithTitle.Content>
                                            <ComboBox
                                                Width="80"
                                                ItemsSource="{Binding AmuxSelections}"
                                                SelectedValue="{Binding CurrentAmux}" />
                                        </ctrls:ControlWithTitle.Content>
                                    </ctrls:ControlWithTitle>
                                </StackPanel>
                            </GroupBox>
                        </Grid>

                    </Border>

                </Grid>
            </TabItem>
            <!--    -->
            <TabItem Header="Register">
                <Grid>
                    <Grid.Resources>
                        <DataTemplate DataType="{x:Type models:GDICRegisterGroup}">
                            <Border
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Style="{StaticResource CardBorder}">
                                <Grid>
                                    <TextBlock Text="{Binding GroupName}" />
                                    <TextBlock Text="{Binding Address}" />
                                    <TextBlock Text="{Binding Data.OriginValue, Converter={StaticResource DoubleHexConverter}}" />
                                    <TextBlock Text="{Binding CRC.OriginValue, Converter={StaticResource DoubleHexConverter}}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type models:GDICRegisterDeviceGroup}">
                            <GroupBox
                                Height="200"
                                MinWidth="600"
                                Margin="1"
                                Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}"
                                Header="{Binding GroupName}">
                                <ListView ItemsSource="{Binding RegisterGroups}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn DisplayMemberBinding="{Binding GroupName}" Header="Name" />
                                            <GridViewColumn DisplayMemberBinding="{Binding Address}" Header="Address" />
                                            <GridViewColumn DisplayMemberBinding="{Binding Data.OriginValue, Converter={StaticResource DoubleHexConverter}}" Header="Data" />
                                            <GridViewColumn DisplayMemberBinding="{Binding CRC.OriginValue, Converter={StaticResource DoubleHexConverter}}" Header="CRC" />
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </GroupBox>
                        </DataTemplate>
                    </Grid.Resources>
                    <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Registers}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!--  ADC  -->
            <TabItem Header="ADC">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <!--<ItemsControl ItemsSource="{Binding AdcSignals}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:GDICADCSignal}">
                                <StackPanel>
                                    <TextBlock Text="{Binding RegisterSignal.Name}"/>
                                    <TextBlock Text="{Binding PowerTemp}"/>
                                    <TextBlock Text="{Binding DieTemp}"/>
                                    <TextBlock Text="{Binding VCC}"/>
                                    <TextBlock Text="{Binding Amuxin}"/>
                                    <TextBlock Text="{Binding VEE}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>-->
                    <ListView Grid.Row="1" ItemsSource="{Binding AdcSignalGroups}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn DisplayMemberBinding="{Binding DeviceName}" Header="Device" />
                                <!--<GridViewColumn Header="Name" DisplayMemberBinding="{Binding RegisterSignal.Name}"/>-->
                                <GridViewColumn DisplayMemberBinding="{Binding Desat.OriginValue}" Header="DESAT" />
                                <GridViewColumn DisplayMemberBinding="{Binding Amuxin.OriginValue}" Header="AMUXIN" />
                                <GridViewColumn DisplayMemberBinding="{Binding VCC.OriginValue}" Header="VCC" />
                                <GridViewColumn DisplayMemberBinding="{Binding VEE.OriginValue}" Header="VEE" />
                                <GridViewColumn DisplayMemberBinding="{Binding PowerTemp.OriginValue}" Header="Power Device Temperature" />
                                <GridViewColumn DisplayMemberBinding="{Binding DieTemp.OriginValue}" Header="Die Device Temperature" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <GroupBox Grid.Row="0" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <ctrls:ControlWithTitle Title="Device:">
                                <ctrls:ControlWithTitle.Content>
                                    <ComboBox
                                        Width="100"
                                        ItemsSource="{Binding AdcSignals}"
                                        SelectedValue="{Binding CurrentAdcSignal}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding RegisterSignal.DeviceName}" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ComboBox>
                                </ctrls:ControlWithTitle.Content>
                            </ctrls:ControlWithTitle>
                            <ctrls:ControlWithTitle Title="Value:">
                                <ctrls:ControlWithTitle.Content>
                                    <ComboBox
                                        Width="100"
                                        ItemsSource="{Binding AdcValueSelections}"
                                        SelectedValue="{Binding CurrentValueSelection}" />
                                </ctrls:ControlWithTitle.Content>
                            </ctrls:ControlWithTitle>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
