        <GroupBox Header="Inputs" Grid.Row="3">
            <Grid>
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding NxpInputSignals}">
                        
                    </ItemsControl>
                </ScrollViewer>
                
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
