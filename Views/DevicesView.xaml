<UserControl x:Class="WpfApp1.Views.DevicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Views" 
             xmlns:converters="clr-namespace:WpfApp1.Converters"
             xmlns:dev="clr-namespace:WpfApp1.Devices"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:DeviceHardwareTypeIsCheckedConverter x:Key="DeviceHardwareTypeIsCheckedConverter"/>
    </UserControl.Resources>
    <Grid Margin="20,10,20,10" MinWidth="200" MaxWidth="220">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Device Config" Style="{StaticResource TitleLabel}" Grid.Row="0"/>

        <Grid Grid.Row="1" MinHeight="100" Margin="0,10,0,0">
            <Grid.RowDefinitions >
                <RowDefinition />
                <RowDefinition />
                <!--<RowDefinition />-->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <RadioButton  Grid.Row="0" 
                          Grid.Column="0" 
                          Name="vectorCheck"
                          GroupName="Type"
                          IsChecked="{Binding HardWareType,
                                         Mode=TwoWay,
                                         Converter={StaticResource DeviceHardwareTypeIsCheckedConverter},
                                         ConverterParameter={x:Static dev:DeviceHardWareType.Vector}}"></RadioButton>
            <RadioButton Grid.Row="1" 
                         Grid.Column="0" 
                         GroupName="Type"
                         Name="virtualCheck"
                         IsChecked="{Binding HardWareType,
                                        Mode=TwoWay,
                                        Converter={StaticResource DeviceHardwareTypeIsCheckedConverter},
                                        ConverterParameter={x:Static dev:DeviceHardWareType.Virtual}}"></RadioButton>
            <!--<RadioButton  Grid.Row="2" Grid.Column="0"></RadioButton>-->
            <GroupBox Header="Vector Devices" Grid.Row="0" Grid.Column="1" IsEnabled="{Binding ElementName=vectorCheck,Path=IsChecked}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource labelText}">Device:</TextBlock>
                    <ComboBox 
                        Style="{StaticResource NormalCombox}" 
                        ItemsSource="{Binding VectorDevices}" 
                        DisplayMemberPath="Name" 
                        SelectedValue="{Binding CurrentDevice}"></ComboBox>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Virtual Devices" Grid.Row="1" Grid.Column="1" IsEnabled="{Binding ElementName=virtualCheck,Path=IsChecked}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource labelText}">Device:</TextBlock>
                    <ComboBox Style="{StaticResource NormalCombox}" ItemsSource="{Binding VirtualDevices}" DisplayMemberPath="Name"
                              SelectedValue="{Binding CurrentDevice}" ></ComboBox>
                </StackPanel>
            </GroupBox>
            <!--<GroupBox Header="Zlg Devices" Grid.Row="2" Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource labelText}">Device:</TextBlock>
                    <ComboBox Style="{StaticResource NormalCombox}"></ComboBox>
                </StackPanel>
            </GroupBox>-->
        </Grid>

        <Button Content="Ok" Command="{Binding SaveConfigCommand}" Style="{StaticResource NormalButton}" Grid.Row="2" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
