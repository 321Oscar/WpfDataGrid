<UserControl
    x:Class="WpfApp1.Views.PulseOutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition
                Height="auto"
                MinHeight="200"
                MaxHeight="400" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource TitleLabel}">Pulse Out</TextBlock>
        <DataGrid Grid.Row="1" AutoGenerateColumns="False"
                  IsReadOnly="True"
                  ItemsSource="{Binding Groups}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="SignalName" Binding="{Binding SignalName}"/>
                <DataGridTextColumn Width="*" Header="Fre" Binding="{Binding Freq.Value1}"/>
                <DataGridTextColumn Width="*" Header="Duty" Binding="{Binding DutyCycle.Value1}"/>
            </DataGrid.Columns>
        </DataGrid>
        <GroupBox
            Grid.Row="2"
            MaxWidth="1000"
            HorizontalAlignment="Left"
            Header="Inverter PWM Output">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0">Frequency in Hz</TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="1">PWM Mode</TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="2">CurSmplMode</TextBlock>
                <TextBlock Grid.Row="2" Grid.Column="0">PWM_U_TOP/BOT Duty Cycle(0%-100%)</TextBlock>
                <TextBlock Grid.Row="4" Grid.Column="0">PWM_V_TOP/BOT Duty Cycle(0%-100%)</TextBlock>
                <TextBlock Grid.Row="6" Grid.Column="0">PWM_W_TOP/BOT Duty Cycle(0%-100%)</TextBlock>
                <TextBox
                    Grid.Row="1"
                    Grid.Column="0"
                    d:Text="8000" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    d:Text="0" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="2"
                    d:Text="0" />
                <TextBox
                    Grid.Row="3"
                    Grid.Column="0"
                    d:Text="50" />
                <TextBox
                    Grid.Row="5"
                    Grid.Column="0"
                    d:Text="50" />
                <TextBox
                    Grid.Row="7"
                    Grid.Column="0"
                    d:Text="50" />
                <Button
                    Grid.Row="8"
                    Grid.Column="0"
                    Content="Update" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
