<UserControl
    x:Class="WpfApp1.Views.DiscreteView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:WpfApp1.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:UpdateSourceTriggerConverter x:Key="UpdateSourceTriggerConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock Style="{StaticResource TitleLabel}" Text="Discrete" />
        <StackPanel
            Grid.Row="0"
            Margin="130,10,0,10"
            Orientation="Horizontal">
            <Button Content="Set xxx Output" Style="{StaticResource topButton}" />
            <Button Content="Reset Motor Faults" Style="{StaticResource topButton}" />
        </StackPanel>
        <GroupBox Grid.Row="1" Header="Inputs">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <DataGrid
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding InputSignals}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Name}" Header="Signal_Name" />
                        <DataGridTextColumn Binding="{Binding PinNumber}" Header="PinNumber" />
                        <DataGridTextColumn Binding="{Binding OriginValue}" Header="State" />
                        <DataGridTextColumn Binding="{Binding Transitions}" Header="# Transitions" />
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </GroupBox>
        <GroupBox
            Grid.Row="0"
            Grid.Column="1"
            Header="TLF Test">
            <StackPanel Orientation="Horizontal">
                <Button
                    Padding="5"
                    Content="Disable"
                    Style="{StaticResource NormalButton}" />
                <Button Content="Reset TLF Faults" Style="{StaticResource NormalButton}" />
                <ComboBox Style="{StaticResource NormalCombox}" />
                <Button Content="Send Bad" Style="{StaticResource NormalButton}" />
                <CheckBox
                    Content="Sync"
                    IsChecked="{Binding OutputSignalSync}"
                    Style="{StaticResource NormalCheckBox}" />
                <Button
                    Command="{Binding UpdateCommand}"
                    Content="Update"
                    Style="{StaticResource NormalButton}" />
            </StackPanel>
        </GroupBox>
        <GroupBox
            Grid.Row="1"
            Grid.Column="1"
            Header="Outputs">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <DataGrid
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    ItemsSource="{Binding OutputSignals}"
                    SelectionUnit="Cell">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Binding="{Binding Name}"
                            Header="Signal_Name"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Binding="{Binding PinNumber}"
                            Header="PinNumber"
                            IsReadOnly="True" />

                        <DataGridTemplateColumn Header="Pin_High">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox HorizontalAlignment="Center" IsChecked="{Binding Pin_High, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn> 
                        <DataGridTemplateColumn Header="Pin_Low">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox HorizontalAlignment="Center" IsChecked="{Binding Pin_Low, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn
                            Binding="{Binding OriginValue}"
                            Header="State"
                            IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>


            </Grid>
        </GroupBox>

    </Grid>
</UserControl>
